<Script file="BagButton.lua"/>

<Button name="LiteBagBagButtonTemplate" inherits="ItemButtonTemplate" hidden="true" virtual="true">
    <Size x="26" y="26" />
    <Layers>
        <Layer level="OVERLAY">
            <Texture parentKey="FilterIcon" atlas="bags-icon-consumables" useAtlasSize="true" hidden="true">
                <Anchors>
                    <Anchor point="CENTER" relativePoint="BOTTOMRIGHT" x="-7" y="7" />
                </Anchors>
            </Texture>
        </Layer>
    </Layers>
    <Frames>
        <Frame name="$parentFilterDropdown" parentKey="FilterDropDown" inherits="UIDropDownMenuTemplate">
            <Scripts>
                <OnLoad function="LiteBagBagButtonFilterDropdown_OnLoad" />
            </Scripts>
        </Frame>
    </Frames>
    <Scripts>
        <OnSizeChanged>
            -- For some reason the NormalTexture is only center anchored
            -- which means it doesn't scale when the button does.
            local tex = _G[self:GetName().."NormalTexture"]
            tex:SetWidth(64 *  w / 37)
            tex:SetHeight(64 * h / 37)
        </OnSizeChanged>
        <OnLoad>
            LiteBagBagButton_OnLoad(self)
        </OnLoad>
        <OnClick function="LiteBagBagButton_OnClick" />
        <OnEnter function="LiteBagBagButton_OnEnter" />
        <OnLeave function="LiteBagBagButton_OnLeave" />
        <OnDragStart function="LiteBagBagButton_OnDrag" />
        <OnReceiveDrag function="LiteBagBagButton_OnClick" />
        <OnEvent function="LiteBagBagButton_OnEvent" />
    </Scripts>
</Button>

<Frame name="LiteBagBagFrameTemplate" virtual="true">
    <Size x="236" y="26" />

    <Frames>
        <Button name="$parentButton1" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" />
            </Anchors>
        </Button>

        <Button name="$parentButton2" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton1" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton3" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton2" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton4" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton3" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton5" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton4" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton6" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton5" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton7" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton6" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>

        <Button name="$parentButton8" parentArray="bagButtons" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentButton7" relativePoint="RIGHT" x="4" />
            </Anchors>
        </Button>
    </Frames>
</Frame>

</Ui>
