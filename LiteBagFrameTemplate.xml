<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<Script file="LiteBagFrameTemplate.lua" />

<!-- Copyright 2013 Mike Battersby -->

<Frame name="LiteBagFrameTemplate" frameStrata="MEDIUM" toplevel="true" movable="true" enableMouse="true" hidden="true" inherits="ButtonFrameTemplate" virtual="true">

    <Size x="384" y="512" />

    <Frames>
        <Frame name="$parentMoneyFrameBorder" inherits="ThinGoldEdgeTemplate">
            <Size x="170" y="21" />
            <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-8" y="5" />
            </Anchors>
        </Frame>

        <Frame name="$parentMoneyFrame" parentKey="moneyFrame" inherits="SmallMoneyFrameTemplate">
            <Anchors>
                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-2" y="9" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    SmallMoneyFrame_OnLoad(self)
                    MoneyFrame_SetType(self, "PLAYER")
                    MoneyFrame_SetMaxDisplayWidth(self, 168)
                </OnLoad>
            </Scripts>
        </Frame>

        <Button name="$parentPortraitButton">
            <Size x="40" y="40" />
            <Anchors>
                <Anchor point="TOPLEFT" x="7" y="-5" />
            </Anchors>
            <Scripts>
                <OnEnter>
                    GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                    GameTooltip:ClearLines()
                    GameTooltip:AddLine(YELLOW_FONT_COLOR_CODE .. CURRENCY .. FONT_COLOR_CODE_CLOSE)
                    for i = 1, MAX_WATCHED_TOKENS do
                        local name, amount, icon = GetBackpackCurrencyInfo(i)
                        if name then
                            GameTooltip:AddLine(amount)
                            GameTooltip:AddTexture(icon)
                        end
                    end
                    GameTooltip:Show()
                </OnEnter>
                <OnLeave>
                    GameTooltip:Hide()
                </OnLeave>
            </Scripts>
        </Button>

        <Button name="$parentBagButton1" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" y="-70" x="-2" />
            </Anchors>
        </Button>

        <Button name="$parentBagButton2" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOP" relativeTo="$parentBagButton1" relativePoint="BOTTOM" y="-4" />
            </Anchors>
        </Button>

        <Button name="$parentBagButton3" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOP" relativeTo="$parentBagButton2" relativePoint="BOTTOM" y="-4" />
            </Anchors>
        </Button>

        <Button name="$parentBagButton4" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOP" relativeTo="$parentBagButton3" relativePoint="BOTTOM" y="-4" />
            </Anchors>
        </Button>

        <Button name="$parentBagButton5" inherits="LiteBagBagButtonTemplate">
            <Anchors>
                <Anchor point="TOP" relativeTo="$parentBagButton4" relativePoint="BOTTOM" y="-4" />
            </Anchors>
        </Button>

    </Frames>

    <Scripts>
        <OnLoad function="LiteBagFrame_OnLoad" />
        <OnEvent function="LiteBagFrame_OnEvent" />
        <OnHide function="LiteBagFrame_OnHide" />
        <OnShow function="LiteBagFrame_OnShow" />
    </Scripts>
</Frame>

</Ui>
