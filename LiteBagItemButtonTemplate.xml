<Script file="LiteBagItemButtonTemplate.lua"/>

<Button name="LiteBagItemButtonTemplate" inherits="ContainerFrameItemButtonTemplate" hidden="true" virtual="true">

    <Size x="37" y="37" />

    <Layers>
        <Layer level="BACKGROUND">
            <Texture name="$parentBackgroundTexture" file="Interface\Buttons\UI-Slot-Background" parentKey="backgroundTexture">
                <Size x="38.5" y="38.5" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="-1" y="-1" />
                </Anchors>
                <TexCoords left="0" right="0.640625" top="0" bottom="0.640625" />
                <Color r="0.5" b="0.5" g="0.5" a="0.8" />
            </Texture>
        </Layer>
        <Layer level="OVERLAY" textureSubLevel="1">
            <Texture name="$parentEquipsetTexture1" file="Interface\MINIMAP\ObjectIcons" parentKey="eqTexture1" hidden="true">
                <TexCoords left="0.65" right="0.725" top="0.025" bottom="0.1" />
                <Size x="10" y="10" />
                <Anchors>
                    <Anchor point="TOPRIGHT" />
                </Anchors>
            </Texture>
            <Texture name="$parentEquipsetTexture2" file="Interface\MINIMAP\ObjectIcons" parentKey="eqTexture2" hidden="true">
                <TexCoords left="0.775" right="0.85" top="0.025" bottom="0.1" />
                <Size x="10" y="10" />
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.eqTexture1" y="1"/>
                </Anchors>
            </Texture>
            <Texture name="$parentEquipsetTexture3" file="Interface\MINIMAP\ObjectIcons" parentKey="eqTexture3" hidden="true">
                <TexCoords left="0.9" right="0.975" top="0.025" bottom="0.1" />
                <Size x="10" y="10" />
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.eqTexture2" y="1"/>
                </Anchors>
            </Texture>
        </Layer>
    </Layers>

    <Scripts>
        <!-- No OnClick/OnDrag, we have to inherit them because it's secure. -->
        <OnLoad function="LiteBagItemButton_OnLoad" />
        <OnEnter function="LiteBagItemButton_OnEnter" />
        <OnLeave function="LiteBagItemButton_OnLeave" />
        <OnHide function="LiteBagItemButton_OnHide" />
    </Scripts>

</Button>

</Ui>
